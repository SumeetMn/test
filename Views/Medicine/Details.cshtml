@model MedicineTrackingSystem.Models.Medicine
@{
    ViewBag.Title = "Details";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Medicine Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Full Name</dt>
        <dd>@Model.FullName</dd>

        <dt>Brand</dt>
        <dd>@Model.Brand</dd>

        <dt>Price</dt>
        <dd>@Model.Price.ToString("C2")</dd>

        <dt>Quantity</dt>
        <dd>@Model.Quantity</dd>

        <dt>Expiry Date</dt>
        <dd>@Model.ExpiryDate.ToShortDateString()</dd>

        <dt>Notes</dt>
        <dd>@Model.Notes</dd>
    </dl>
</div>

@Html.ActionLink("Back to List", "Index")
